        .pagination.reviews__pagination
          .pagination__list
            a.pagination__button.pagination__button--arrow-left(href="#", aria-label="Переход на предыдущую страницу")
              svg.pagination__button-icon(width="16", height="11")
                use(xlink:href="img/sprite.svg#icon-arrow-pagination")
            .pagination__pages
              a.pagination__button.pagination__button--active(href="#", aria-label="Переход на страницу 1") 1
              a.pagination__button(href="#", aria-label="Переход на страницу 2") 2
              a.pagination__button(href="#", aria-label="Переход на страницу 3") 3
            a.pagination__button.pagination__button--arrow-right(href="#", aria-label="Переход на следующую страницу")
