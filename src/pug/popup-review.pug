                use(xlink:href="img/sprite.svg#icon-arrow-pagination")

    include layout/footer.pug

    .overlay.overlay.show
    section.popup.popup--review.review-popup.show
      a.popup__button-close(aria-label='Закрыть окно')
        svg.popup__button-close-icon(width="24", height="24")
          use(xlink:href="img/sprite.svg#icon-cross")
      form.popup__form(method='post' action='#')
        .popup__content
          p.popup__title Оставить отзыв
          .input-double
            .input
              input#name.input__field(type='text' name='name' placeholder='Наталья')
              label.input__label(for='name') Ваше имя
            .input
              // Если в поле введены неверные данные, input добавляется класс .input__field--invalid
              input#tel.input__field(type='text' name='tel' placeholder='8 999 999 99 99' required)
              label.input__label(for='tel') Ваш номер телефона
                span.input__label--star  *
              // Текст ошибки указывается в span с классами .input__note .input__note--invalid
              span.input__note.input__note--invalid Телефон указан неверно, пример: +7 111 222-33-44
          .input
            textarea#review.input__field(type='text' name='review' placeholder='Комментарий' rows='4')
            label.input__label(for='review') Ваш отзыв
          .popup__wrap
            .rating.popup__rating
              p.rating__title Ваша оценка
              .rating__mark
                input#5-stars.rating__input.visually-hidden(name='rating' value='5' type='radio')
                label.rating__label(for='5-stars' title='5 баллов')
                  svg.rating__label-icon(width="16", height="16")
                    use(xlink:href="img/sprite.svg#icon-star")
                input#4-stars.rating__input.visually-hidden(name='rating' value='4' type='radio' checked)
                label.rating__label(for='4-stars' title='4 балла')
                  svg.rating__label-icon(width="16", height="16")
                    use(xlink:href="img/sprite.svg#icon-star")
                input#3-stars.rating__input.visually-hidden(name='rating' value='3' type='radio')
                label.rating__label(for='3-stars' title='3 балла')
                  svg.rating__label-icon(width="16", height="16")
                    use(xlink:href="img/sprite.svg#icon-star")
                input#2-stars.rating__input.visually-hidden(name='rating' value='2' type='radio')
                label.rating__label(for='2-stars' title='2 балла')
                  svg.rating__label-icon(width="16", height="16")
                    use(xlink:href="img/sprite.svg#icon-star")
                input#1-star.rating__input.visually-hidden(name='rating' value='1' type='radio')
                label.rating__label(for='1-star' title='1 балл')
                  svg.rating__label-icon(width="16", height="16")
                    use(xlink:href="img/sprite.svg#icon-star")
              p.rating__count
                span.rating__score 4
                | /5
            .file-input
              input#photo.file-input__field.visually-hidden(type='file' name='photo')
              label.file-input__label(for='photo')
                | Добавить фото
                svg.file-input__label-icon(width="19", height="20")
                  use(xlink:href="img/sprite.svg#icon-clip")
          .popup__button-wrap
            button.button.popup__button(type='submit') Отправить
            p.popup__caption
              | Нажимая на кнопку «Отправить» я даю согласие на обработку
              = " "
              a.popup__caption-link(href='#') персональных данных

