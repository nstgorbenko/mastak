                  .all-cert__item-image-wrap
                    img.all-cert__item-image(src="img/cert-5.jpg" alt="Сертификат")
              li.all-cert__item
                a.all-cert__link(data-fslightbox="works" href="img/cert-3.jpg")
                  .all-cert__item-image-wrap
                    img.all-cert__item-image(src="img/cert-3.jpg" alt="Сертификат")
