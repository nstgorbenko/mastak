                svg.title__link-icon(width="16", height="11")
                  use(xlink:href="img/sprite.svg#icon-arrow")

      section.feedback
        .feedback__bg(style="background-image: url(/img/bg-legal.jpg)")
        .page__container
          .feedback__content
            .feedback__banner-wrap(style="background-image: url(/img/bg-legal.jpg)")
            .feedback__content-wrap
              form.feedback__form(method="post" action="#")
                .feedback__form-content
                  p.feedback__content-title
                    span Индивидуальные условия
                    br
                    |  сервисного обслуживания
                    br
                    |  для
                    span  юридических лиц
                  .input
                    input#name.input__field(type="text" name="company" placeholder="ЮгСтрой")
                    label.input__label(for="company") Название компании
                  .input
                    // Если в поле введены неверные данные, input добавляется класс .input__field--invalid
                    input#tel.input__field(type="text" name="tel" placeholder="8 999 999 99 99" required)
                    label.input__label(for="tel") Ваш номер телефона
                      = " "
                      span.input__label--star *
                    // Текст ошибки указывается в span с классами .input__note .input__note--invalid
                    span.input__note.input__note--invalid Телефон указан неверно, пример: +7 111 222-33-44
                  button.button.feedback__button(type="submit") Отправить
                  p.feedback__caption Нажимая на кнопку «Отправить» я даю согласие на обработку
                    = " "
                    a.feedback__caption-link(href="#") персональных данных

    include layout/footer.pug

    .overlay.overlay--popup
    section.popup.popup--data.data-popup
      button.popup__button-close(type="button" aria-label='Закрыть окно')
        svg.popup__button-close-icon(width="24", height="24")
          use(xlink:href="img/sprite.svg#icon-cross")
      form.popup__form(method='post' action='#')
        .popup__content
          p.popup__title
            | Оставьте свои данные
            span.popup__title-text И мы вам обязательно перезвоним
          .input
            input#name.input__field(type='text' name='name' placeholder='Иван')
            label.input__label(for='name') Ваше имя
          .input
            // Если в поле введены неверные данные, input добавляется класс .input__field--invalid
            input#tel.input__field(type='text' name='tel' placeholder='8 999 999 99 99' required='')
            label.input__label(for='tel') Ваш номер телефона
              span.input__label--star  *
            // Текст ошибки указывается в span с классами .input__note .input__note--invalid
            span.input__note.input__note--invalid Телефон указан неверно, пример: +7 111 222-33-44
          button.button.popup__button(type='submit') Отправить
          p.popup__caption
            | Нажимая на кнопку «Отправить» я даю согласие на обработку
            = " "
            a.popup__caption-link(href='#') персональных данных

