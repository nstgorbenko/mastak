              button.title__button.title__button--next.team__button.team__button--next(type="button", aria-label="Следующий слайд")
                svg.title__button-icon(width="16", height="11")
                  use(xlink:href="img/sprite.svg#icon-arrow")
            .title__drag
              img.title__drag-image(src="img/icons/icon-drag.gif")
          .team__container.swiper-container
            ul.team__list.swiper-wrapper
              li.team__item.swiper-slide
                .team__image-wrap
                  img.team__image(src="img/team-1.jpg" alt="Дерюгин Дмитрий Александрович")
                p.team__item-practice Опыт 10 лет
                p.team__item-name Дерюгин Дмитрий Александрович
                p.team__item-post Генеральный директор
              li.team__item.swiper-slide
                .team__image-wrap
                  img.team__image(src="img/team-2.jpg" alt="Медведев Сергей Михайлович")
                p.team__item-practice Опыт 20 лет
                p.team__item-name Медведев Сергей Михайлович
                p.team__item-post Технический директор
              li.team__item.swiper-slide
                .team__image-wrap
                  img.team__image(src="img/team-3.jpg" alt="Толмачева Наталья Евгеньевна")
                p.team__item-practice Опыт 15 лет
                p.team__item-name Толмачева Наталья Евгеньевна
                p.team__item-post Бухгалтер
              li.team__item.swiper-slide
                .team__image-wrap
                  img.team__image(src="img/team-4.jpg" alt="Титов Евгений Викторович")
                p.team__item-practice Опыт 10 лет
                p.team__item-name Титов Евгений Викторович
                p.team__item-post Специалист по логистике
              li.team__item.swiper-slide
                .team__image-wrap
                  img.team__image(src="img/team-5.jpg" alt="Коновалов Владимир Анреевич")
                p.team__item-practice Опыт 5 лет
                p.team__item-name Коновалов Владимир Анреевич
                p.team__item-post Специалист по приему инструментов

      section.faq
        .page__container
          .faq__wrapper
            .faq__content
              .title.faq__title
                p.title__name.faq__name Популярные
                  span  вопросы
              ul.faq__list
                li.faq__item
                  input#faq-1.faq__item-checkbox.visually-hidden(type='checkbox' name='faq')
                  label.faq__item-name(for='faq-1')
                    span.faq__item-question Если я не могу привезти свою технику в сервисный центр, что мне делать?
                    span.faq__item-icon
                  .faq__answer
                    p.faq__answer-text Товары нашего магазина доставляют покупателям транспортные компании:
                    ul.faq__answer-list
                      li.faq__answer-item Россия — EMS Почта России;
                      li.faq__answer-item За пределы России - ЕМС Почта, посылка почта России стандарт.
                li.faq__item
                  input#faq-2.faq__item-checkbox.visually-hidden(type='checkbox' name='faq')
                  label.faq__item-name(for='faq-2')
                    span.faq__item-question Как быстро приезжает специалист?
                    span.faq__item-icon
                  .faq__answer
                    p.faq__answer-text Товары нашего магазина доставляют покупателям транспортные компании:
                    ul.faq__answer-list
                      li.faq__answer-item Россия — EMS Почта России;
                      li.faq__answer-item За пределы России - ЕМС Почта, посылка почта России стандарт.
                li.faq__item
                  input#faq-3.faq__item-checkbox.visually-hidden(type='checkbox' name='faq')
                  label.faq__item-name(for='faq-3')
                    span.faq__item-question Если я не могу привезти свою технику в сервисный центр, что мне делать?
                    span.faq__item-icon
                  .faq__answer
                    p.faq__answer-text Товары нашего магазина доставляют покупателям транспортные компании:
                    ul.faq__answer-list
                      li.faq__answer-item Россия — EMS Почта России;
                      li.faq__answer-item За пределы России - ЕМС Почта, посылка почта России стандарт.
                li.faq__item
                  input#faq-4.faq__item-checkbox.visually-hidden(type='checkbox' name='faq' checked)
                  label.faq__item-name(for='faq-4')
                    span.faq__item-question Сколько составляет гарантия?
                    span.faq__item-icon
                  .faq__answer
                    p.faq__answer-text Товары нашего магазина доставляют покупателям транспортные компании:
                    ul.faq__answer-list
                      li.faq__answer-item Россия — EMS Почта России;
                      li.faq__answer-item За пределы России - ЕМС Почта, посылка почта России стандарт.

            .call-order.faq__call-order
              p.call-order__title Закажите звонок мастера
              p.call-order__text Перезвоним в течении 10 минут
              button.button.call-order__button.open-data-popup(type="button") Заказать звонок

